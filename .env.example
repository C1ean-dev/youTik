# YouTube API Configuration
# Get your API key from: https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CHANNEL_ID=your_channel_id_here
YOUTUBE_MONITORING_INTERVAL_MINUTES=5
YOUTUBE_MIN_API_INTERVAL_MS=1000
YOUTUBE_MAX_MONITORING_INTERVAL_MINUTES=60
YOUTUBE_CONSECUTIVE_ERRORS_THRESHOLD=3

# Gemini AI Configuration
# Get your API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# TikTok API Configuration
# Get your credentials from: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# File Paths
TEMP_DIR=./temp
OUTPUT_DIR=./output

# Processing Settings
SILENCE_THRESHOLD=-30dB
ACCELERATION_FACTOR=2.0
TARGET_RESOLUTION=854x480
SLIDING_WINDOW_PARTS=10
SLIDING_WINDOW_STEP_PERCENT=10
FINAL_VIDEO_DURATION=60

# Video Quality Settings
VIDEO_QUALITY=highest
AUDIO_QUALITY=128k

# Development Mode
DEVELOPMENT_MODE=true
PROCESS_TEST_VIDEOS_FIRST=true
OPERATION_MODE=both

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_QUIET=false